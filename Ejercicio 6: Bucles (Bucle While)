#se usa el if para comparar el valor del usuario con la contrase単a correcta y while para repetir el proceso hasta que las contrase単as coincidan, el codigo se deja de ejecutar con el break
#!/bin/bash
while true; do
    read -p "ingresar  contrase単a: " valor
        echo
    if [ "$valor" == "secreta" ]; then
        echo "Acceso concedido"
        break  
    else
        echo "Contrase単a incorrecta, intenta nuevamente."
    fi
done

